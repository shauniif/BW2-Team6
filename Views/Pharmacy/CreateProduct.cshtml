@model BW2_Team6.Models.Product

@{
    ViewData["Title"] = "CreateProduct";
}

<h1>CreateProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct" method="post">
            <div class="text-danger">@ViewBag.ErrorMessage</div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="CompanyId">Seleziona Ditta</label>
                <select id="CompanyId" name="CompanyId" class="form-control" asp-items="ViewBag.Companies">
                    <option value="0">-- Seleziona ditta --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfProduct" class="control-label">Type Of Product</label>
                <select asp-for="TypeOfProduct" class="form-control" asp-items="ViewBag.ProductTypes">
                    <option value="">-- Seleziona tipo di prodotto --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfUse" class="control-label"></label>
                <input asp-for="TypeOfUse" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
