@model IEnumerable<BW2_Team6.Models.Animal>

@{
    ViewData["Title"] = "Lista degli animali";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Lista degli Animali</h1>

    <div class="d-flex justify-content-between mb-3">
        <p class="lead">Qui puoi visualizzare tutti gli animali registrati nel sistema.</p>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createAnimalModal">
            Aggiungi un Nuovo Animale
        </button>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Pelliccia</th>
                <th>Data di Nascita</th>
                <th>Microchip</th>
                <th>Proprietario</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fur)</td>
                    <td>@item.DateBirth.ToShortDateString()</td>
                    <td>@Html.DisplayFor(modelItem => item.Microchip)</td>
                    <td>
                        @if (item.Owner != null)
                        {
                            @Html.DisplayFor(modelItem => item.Owner.FirstName)
                        }
                        else
                        {
                            <span class="text-danger">Nessun Proprietario</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editAnimalModal" data-animal-id="@item.Id">
                                Modifica
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-animal-id="@item.Id">
                                Elimina
                            </button>
                            <button type="button" class="btn btn-primary btn-sm" data-animal-id="@item.Id" data-bs-toggle="modal" data-bs-target="#visiteModal">
                                Visite di @item.Name
                            </button>
                            @if (item.Owner == null)
                            {
                                <a asp-action="Create" asp-controller="Recover" asp-route-id="@item.Id" class="btn btn-info btn-sm">Registra Ricovero</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal di Conferma Eliminazione -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Conferma Eliminazione</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Sei sicuro di voler eliminare questo animale? Questa azione non può essere annullata.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteAnimalId" />
                    <button type="submit" class="btn btn-danger">Elimina</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal di Creazione Animale -->
<div class="modal fade" id="createAnimalModal" tabindex="-1" aria-labelledby="createAnimalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createAnimalModalLabel">Crea Nuovo Animale</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="createAnimalModalBody">
                <!-- Contenuto caricato via AJAX -->
                <div class="text-center my-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Caricamento in corso...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal di Modifica Animale -->
<div class="modal fade" id="editAnimalModal" tabindex="-1" aria-labelledby="editAnimalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAnimalModalLabel">Modifica Animale</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editAnimalModalBody">
                <!-- Contenuto caricato via AJAX -->
                <p>Caricamento in corso...</p>
            </div>
        </div>
    </div>
</div>

<!-- Modal per le Visite -->
<div class="modal fade" id="visiteModal" tabindex="-1" aria-labelledby="visiteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="visiteModalLabel">Visite dell'Animale</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Data Visita</th>
                            <th>Esame Obiettivo</th>
                            <th>Cura Prescritta</th>
                        </tr>
                    </thead>
                    <tbody id="visitsTableBody">
                        <!-- I dati delle visite verranno inseriti qui -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                <div id="buttonVisit">

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Gestione del modal di creazione
        var createAnimalModalBody = document.getElementById('createAnimalModalBody');

        document.querySelector('[data-bs-target="#createAnimalModal"]').addEventListener('click', function () {
            fetch('@Url.Action("Create", "Animal")')
                .then(response => response.text())
                .then(data => {
                    createAnimalModalBody.innerHTML = data;
                })
                .catch(error => {
                    createAnimalModalBody.innerHTML = '<p>Errore nel caricamento del modulo di creazione.</p>';
                });
        });

        // Gestione del modal di modifica
        var editAnimalModalBody = document.getElementById('editAnimalModalBody');

        document.querySelectorAll('button[data-bs-target="#editAnimalModal"]').forEach(button => {
            button.addEventListener('click', function () {
                var animalId = this.getAttribute('data-animal-id');
                fetch('@Url.Action("Edit", "Animal")/' + animalId)
                    .then(response => response.text())
                    .then(data => {
                        editAnimalModalBody.innerHTML = data;
                    })
                    .catch(error => {
                        editAnimalModalBody.innerHTML = '<p>Errore nel caricamento del modulo di modifica.</p>';
                    });
            });
        });

        // Gestione del modal di eliminazione
        var deleteForm = document.getElementById('deleteForm');
        var deleteAnimalIdInput = document.getElementById('deleteAnimalId');

        document.querySelectorAll('button[data-bs-target="#confirmDeleteModal"]').forEach(button => {
            button.addEventListener('click', function () {
                var animalId = this.getAttribute('data-animal-id');
                deleteAnimalIdInput.value = animalId;
                deleteForm.action = '@Url.Action("Delete", "Animal")/' + animalId;
            });
        });

       

    </script>
}






