@model IEnumerable<BW2_Team6.Models.Animal>

@{
    ViewData["Title"] = "Animals List";
}

<h1>Animals List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Animal</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().DateRegister)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Fur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().DateBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Microchip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Owner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var animal in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => animal.DateRegister)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => animal.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => animal.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => animal.Fur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => animal.DateBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => animal.Microchip)
                </td>
                <td>
                    @if (animal.Owner != null)
                    {
                        @animal.Owner.Name
                    }
                    else
                    {
                        <span>No Owner</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@animal.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@animal.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@animal.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


