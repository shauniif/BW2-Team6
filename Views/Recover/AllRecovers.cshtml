@model IEnumerable<BW2_Team6.Models.Recover>

@{
    ViewData["Title"] = "AllRecovers";
}

<h1>AllRecovers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateRecover)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img src="@item.Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRecover)
            </td>
            <td>
                    @Html.ActionLink("Update", "Update", new { id=item.Id}) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
